# Application Settings
APP_NAME="DB Management System"
COMPANY_NAME="Your Company Name"

# Security Settings
ENCRYPTION_KEY_LENGTH=32
SALT_LENGTH=16
TOKEN_EXPIRY_HOURS=24
PASSWORD_MIN_LENGTH=12
PASSWORD_REQUIRE_SPECIAL=true
PASSWORD_REQUIRE_NUMBERS=true
PASSWORD_REQUIRE_UPPERCASE=true

# Database Settings
DATA_DIR="data"
DB_SCHEMA_FILE="data/schema.enc"
DB_DATA_FILE="data/database.enc"
DB_USER_FILE="data/users.enc"
DB_CONFIG_FILE="data/db_config.enc"

# Resource Settings
RESOURCE_DIR="resources"
COMPANY_LOGO="resources/company/logo.png"
COMPANY_ICON="resources/company/icon.ico"

# Email Settings (for notifications)
SUPPORT_EMAIL="support@example.com"
ADMIN_EMAIL="admin@example.com"

# Logging
LOG_LEVEL="INFO"
LOG_FILE="logs/app.log"
MAX_LOG_SIZE_MB=10
MAX_LOG_BACKUPS=5

# UI Settings
THEME="light"  # Options: light, dark
WINDOW_TITLE="Database Management System"
LOGIN_TITLE="Welcome to DB Management System"
SESSION_TIMEOUT_MINUTES=60

# Development Settings (set to false in production)
DEBUG=false
ALLOW_TEST_DATA=false